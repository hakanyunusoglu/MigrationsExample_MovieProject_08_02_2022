@model MigrationExample08_02_2022.Models.Movies
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    @foreach (var item in Model.movies)
    {
        <div class="card" style="width: 18rem;">
            <img src="~/img/@item.MovieImage" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">@item.MovieTitle</h5>
                <p class="card-text">@item.MovieDescription</p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">@item.Category.CategoryName</li>
            </ul>
            <div class="card-body">
                <a href="/Movie/Detail/@item.MovieID" class="card-link btn btn-info">DETAY</a>
            </div>
        </div>
    }
</div>